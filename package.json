{
  "name": "@forge/e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for Forge platform",
  "scripts": {
    "test": "jest --forceExit",
    "test:watch": "jest --watch",
    "test:debug": "NODE_ENV=debug jest --verbose",
    "test:health": "jest --forceExit --testPathPattern='backend/health.test.js'",
    "test:auth": "jest --forceExit --testPathPattern='backend/auth-api.test.js'",
    "test:integration": "jest --forceExit --testPathPattern='integration/integration.test.js'",
    "test:ui": "jest --forceExit --testPathPattern='ui/'",
    "test:ui:components": "jest --forceExit --testPathPattern='ui/ui-components.test.js'",
    "test:ui:routing": "jest --forceExit --testPathPattern='ui/routing.test.js'",
    "test:ui:debug": "NODE_ENV=debug jest --verbose --testPathPattern='ui/'",
    "test:ui:visual": "PUPPETEER_HEADLESS=false jest --testPathPattern='ui/'",
    "test:flows": "jest --forceExit --testPathPattern='flows/'",
    "test:flows:debug": "NODE_ENV=debug jest --verbose --testPathPattern='flows/'",
    "test:flows:visual": "PUPPETEER_HEADLESS=false jest --testPathPattern='flows/'",
    "test:backend": "jest --forceExit --testPathPattern='backend/'",
    "test:backend:debug": "NODE_ENV=debug jest --verbose --testPathPattern='backend/'",
    "test:browser": "npm run test:ui && npm run test:flows",
    "test:browser:visual": "PUPPETEER_HEADLESS=false jest --testPathPattern='ui/|flows/'",
    "test:api": "npm run test:health && npm run test:auth",
    "test:quick": "npm run test:health && npm run test:integration",
    "test:all": "npm run test:backend && npm run test:integration && npm run test:browser",
    "test:ci": "jest --ci --coverage --forceExit"
  },
  "dependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "node-fetch": "^2.6.7",
    "puppeteer": "^21.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "e2e",
    "testing",
    "forge",
    "jest",
    "puppeteer",
    "playwright",
    "api-testing"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/hz-forge.git",
    "directory": "e2e-tests"
  }
}